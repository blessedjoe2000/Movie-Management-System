@model Movie

<partial name="_Breadcrumbs"  model=@(new [] { 
    ("/", "Home"), ("/movie", "Movies"), ("/", ""), ("", "Edit") 
})>

<div class="card-header bg-success">
    <h2 class="mb-2" style="color:whitesmoke">Movies</h2>
</div>

<h3 class="mt-4 mb-4">Edit</h3>

<div class="card round shadow p-3">

    <form asp-action="Edit">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" class="form-danger"/>

        @* using form inputs partial *@
        <partial name="_FormInputs"/> 

        <div class="form-group mt-3">
            <input type="submit" value="Save" class="btn btn-success"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}