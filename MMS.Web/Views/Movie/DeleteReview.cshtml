@model Review

<partial name="_Breadcrumbs"  model=@(new [] {
    ("/", "Home"), ("/movie", "Movies"), ($"/movie/details/{Model.MovieId}", $"{Model.MovieId}"), ("/", ""), ("", "Delete Review")
})>

<div class="card-header bg-success">
    <h2 class="mb-2" style="color:whitesmoke">Delete Review</h2>
</div>

<h3 class="mb-4 mt-4">Are you sure you want to delete this Review?</h3>

<div class="col card rounded shadow pt-3"> 

   

        <input type="hidden" asp-for="Id" class="form-control"/>

    <div>
        <div class="row pl-3" >
            <div class="col-8 pt-3">
                <dl class="row">
                    <dt class="col-4">Name</dt>
                    <dd class="col-8">@Model.Name</dd>

                    <dt class="col-4">On</dt>
                    <dd class="col-8">@Model.CreatedOn</dd>

                    <dt class="col-4">Comment</dt>
                    <dd class="col-8">@Model.Comment</dd>

                    <dt class="col-4">Rating</dt>
                    <dd class="col-8">@Model.Rating</dd>
                </dl>
            </div>
        </div>

        <div class=" form-group mt-4">

            <form asp-controller="Movie" asp-action="DeleteReview" type="post">
                <input type="="hidden asp-for="Id"/>
                <input type="submit" value="Delete" class="btn btn-danger"/>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.MovieId>Cancel</a>
            </form>
 
        </div>
    </div>

</div>