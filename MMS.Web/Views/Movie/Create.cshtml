@model Movie

<partial name="_Breadcrumbs"  model=@(new [] {
    ("/", "Home"), ("/movie", "Movies"), ("/", ""), ("", "Create")
})>

<div class="card-header bg-success">
    <h2 class="mb-2" style="color:whitesmoke">Movies</h2>
</div>

<h3 class="mt-4 mb-4">Create</h3>

<div class="card round shadow p-3">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly"
        class="text-danger"></div>

        @* using form inputs partial *@
        <partial name="_FormInputs"/> 

        <div class="form-group mt-3">
            <input type="submit" value="Create" class="btn btn-success"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}