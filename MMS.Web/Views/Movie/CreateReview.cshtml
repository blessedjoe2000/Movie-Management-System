@model Review

<partial name="_Breadcrumbs"  model=@(new [] {
    ("/", "Home"), ("/movie", "Movies"), ($"/movie/details/{Model.MovieId}", $"{Model.MovieId}"), ("/", ""), ("", "Create Review")
})>

<div class="card-header bg-success">
    <h2 class="mb-2" style="color:whitesmoke">Movies</h2>
</div>

<h3 class="mt-4 mb-4">Add Review </h3>

<form asp-action="CreateReview">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="MovieId" class="form-control"/>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="foam-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea rows="2" asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control"/>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-success"/>
        <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.MovieId >Cancel</a>
    </div>
</form>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}