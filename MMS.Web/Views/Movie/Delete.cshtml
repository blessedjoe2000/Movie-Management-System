@model Movie

<partial name="_Breadcrumbs"  model=@(new [] {
    ("/", "Home"), ("/movie", "Movies"), ("/", ""), ("", "Delete")
})>

@* <h2 class="mt-4 mb-4">Delete</h2> *@

<div class="card-header bg-success">
    <h2 class="mb-2" style="color:whitesmoke">Delete</h2>
</div>

<h3 class="mt-4 mb-4">Are you sure you want to delete this Movie?</h3>

<div>
    <div class="row p-3">
        
        @* using movie details patial *@
        <partial name="_MovieDetails"/>

        <div class="col-4">
            <img src="@Model.PosterUrl" class="img-fluid">

        </div>

    </div>

    <div class="mt-4">
        <form asp-controller="Movie" asp-action="DeleteConfirm" type="post">
            <input type="="hidden asp-for="Id"/>
            <input type="submit" value="ConfirmDelete" class="btn btn-danger"/>
            <a class="btn btn-secondary" asp-controller="Movie" asp-action="Index">Back to list</a>
        </form>
    </div>

</div>

